{% extends '/core/home.jinja2' %}

{% block content %}
    <link rel="stylesheet" href="/static/css/exhibit-detail.css">
    <div class="exhibit-detail">
        {# <img src="{{exhibitImage}}" /> #}
        <h1>{{exhibit.name}}</h1>
        <p class="url">{{ url('home') }}/<span>{{exhibit.slug}}</span></p>
        <p class="by">{{_("Created by ")}} {{exhibit.owner.user.username}}</p>
    </div>
    <p class="stats">{{exhibit.artworks_count}} artworks | Published on {{exhibit.date}}</p>        
    <h1 class="titArt">{{_("Artworks")}}</h1>
    {% with repository_list = artworks, element_type="artwork" %}
        {% include "users/components/item-list.jinja2" %}
    {% endwith %}
{% endblock %}